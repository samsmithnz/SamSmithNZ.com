                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Player Shootout Goals Left" DisplayMemberBinding="{Binding TotalPenaltyShootoutTableGoals}">
                        <GridViewColumn.CellTemplate>
