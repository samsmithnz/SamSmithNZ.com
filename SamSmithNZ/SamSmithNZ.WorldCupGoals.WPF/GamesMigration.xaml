                    </GridViewColumn>
                    <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Label/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!--<GridViewColumn Header="Edit Score">
                        <GridViewColumn.CellTemplate>
